{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="mx-auto max-w-md rounded-lg bg-white p-6 shadow-lg dark:bg-gray-800">
    <form>
      <div class="grid grid-cols-2 gap-4">
        <!-- Prénom -->
        <div class="relative mb-4">
          <label for="first-name" class="text-sm text-gray-600 dark:text-gray-300">Prénom</label>
          <input type="text" id="first-name" class="w-full rounded border p-2 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" placeholder="Prénom" />
        </div>
        
        <!-- Nom -->
        <div class="relative mb-4">
          <label for="last-name" class="text-sm text-gray-600 dark:text-gray-300">Nom</label>
          <input type="text" id="last-name" class="w-full rounded border p-2 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" placeholder="Nom" />
        </div>
      </div>
      
      <!-- Email -->
      <div class="relative mb-4">
        <label for="email" class="text-sm text-gray-600 dark:text-gray-300">Email</label>
        <input type="email" id="email" class="w-full rounded border p-2 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" placeholder="Email" />
      </div>
      
      <!-- Mot de passe -->
      <div class="relative mb-4">
        <label for="password" class="text-sm text-gray-600 dark:text-gray-300">Mot de passe</label>
        <input type="password" id="password" class="w-full rounded border p-2 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-gray-700 dark:text-white" placeholder="Mot de passe" />
      </div>
      
      <!-- Bouton d'inscription -->
      <button type="submit" class="w-full rounded bg-blue-500 px-4 py-2 text-white font-semibold hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">S'inscrire</button>
    </form>
  </div>
  <p></p>
  
{% endblock %}
